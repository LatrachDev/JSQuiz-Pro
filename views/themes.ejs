<div class="w-full max-w-6xl">
    <h1 class="text-4xl font-bold text-center mb-12">
        Choose a <span class="text-yellow-500">JavaScript</span> Theme
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Card 1 -->

        <% themes.forEach(theme=> { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="h-2 bg-yellow-400"></div>
                <div class="p-8">
                    <div class="flex justify-center mb-6">
                        <div class="w-20 h-20 bg-yellow-400 rounded-lg flex items-center justify-center">
                            <span class="text-2xl font-bold text-gray-800">JS</span>
                        </div>
                    </div>
                    <h2 class="text-xl font-bold text-center mb-6 capitalize">
                        <%= theme.name %>
                    </h2>
                    <div class="space-y-3">
                        <a href="/quiz/<%= theme.id%>"
                            class="inline-block w-full text-center bg-gray-900 text-white py-3 px-4 rounded-lg font-medium hover:bg-gray-800 transition">
                            Start Quiz
                        </a>

                        <button
                            class="w-full bg-white text-gray-600 py-3 px-4 rounded-lg font-medium border-2 border-gray-300 hover:bg-gray-50 transition">
                            See Results
                        </button>
                        <button
                            class="w-full bg-white text-gray-600 py-3 px-4 rounded-lg font-medium border-2 border-gray-300 hover:bg-gray-50 transition">
                            Resume Quiz
                        </button>
                    </div>
                </div>
            </div>
            <% }) %>

    </div>
</div>